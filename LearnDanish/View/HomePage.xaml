<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:LearnDanish.ViewModel"
             xmlns:controls="clr-namespace:LearnDanish.Controls"
             xmlns:helpers="clr-namespace:LearnDanish.Helpers"
             x:DataType="viewmodel:HomeViewModel"
             x:Class="LearnDanish.View.HomePage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <HorizontalStackLayout Spacing="10">
                <controls:CircleIcon
                    IconText="{x:Static helpers:MaterialDesignIconsFont.VolumeHigh}"
                    LabelFontSize="25"
                    LabelTextColor="White"
                    FrameColor="Blue"
                    FrameSize="40" />
                
                <Label
                    Text="{Binding Sentence}"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

